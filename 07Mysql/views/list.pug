doctype html
html
    head
        meta(charset='utf-8')
        title ToDo List
        style
            include style.css
    body
        div.wrapper
            div.title
                p TODO LIST
            div.input
                input(type="text", placeholder="...")
                span
            each todo in todos
                if todo.done == 0
                    div.list.do
                        ul.do
                            li
                                = todo.content
                                span X
            each todo in todos
                if todo.done == 1
                    div.list.done
                        p 2019-02-15
                        ul.done
                            li 
                                = todo.content
                                span X
